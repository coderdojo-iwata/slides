{
  "name": "slides",
  "version": "1.0.0",
  "author": "CoderDojoIwata <iwata.jp@coderdojo.com>",
  "license": "WTFPL",
  "private": true,
  "scripts": {
    "clean": "rimraf public",
    "deck": "marp --no-stdin slides/*",
    "plantuml": "node scripts/generate-plantuml-images.js",
    "prepare": "mkdir -p public && find ./slides -name '*.html' -exec mv {} public/ \\; && ncp slides/assets public/assets",
    "top": "node scripts/generate-top.js",
    "open": "open public/index.html",
    "build": "npm-run-all clean deck plantuml prepare top open",
    "start": "marp -ps ."
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^3.4.0",
    "ncp": "^2.0.0",
    "node-plantuml": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  }
}
